<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Semester">

    <Button
        android:id="@+id/semester2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="304dp"
        android:layout_height="135dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="52dp"
        android:onClick="goToModules"
        android:text="2eme semester"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/drawable_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/semester1" />

    <Button
        android:id="@+id/semester1"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="304dp"
        android:layout_height="135dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="87dp"
        android:layout_marginEnd="52dp"
        android:onClick="goToModules"
        android:text="1ere semester"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="@drawable/drawable_bleu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NomFormation" />

    <TextView
        android:id="@+id/NomFormation"
        android:layout_width="164dp"
        android:layout_height="66dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="111dp"
        android:textSize="40dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/NomProf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/NomFormation"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/NomFormation" />
</androidx.constraintlayout.widget.ConstraintLayout>