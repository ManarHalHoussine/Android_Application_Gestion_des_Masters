<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fee4d5">

    <ImageView
        android:id="@+id/design"
        android:layout_width="313dp"
        android:layout_height="194dp"
        app:srcCompat="@drawable/top_backgrounds"
        app:layout_constraintBottom_toTopOf="@+id/titremodule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
     app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="-3dp"
        tools:ignore="NotSibling" />
    <TextView
        android:id="@+id/titremodule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:text="Interface Module"
        android:textColor="#434d94"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/searchBar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="195dp"
        tools:ignore="MissingConstraints,NotSibling" />

    <LinearLayout
        android:layout_width="405dp"
        android:layout_height="710dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="9dp"
        tools:layout_editor_absoluteY="202dp"
        app:layout_constraintTop_toBottomOf="@+id/titremodule"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:context=".interfaces.module.module_activity"
        tools:ignore="MissingConstraints,NotSibling">

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="391dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Search..."
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ListView
            android:id="@+id/modulListview"
            android:layout_width="match_parent"
            android:layout_height="441dp" />

        <Button
            android:id="@+id/addmodulebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/drawable_bleu"
            android:text="Ajouter"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>